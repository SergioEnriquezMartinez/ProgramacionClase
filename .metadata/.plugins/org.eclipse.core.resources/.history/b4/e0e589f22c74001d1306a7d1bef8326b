package Empresa;

public class Empresa {
	private Empleados directivo;
	private Empleados desarrollador1;
	private Empleados desarrollador2;
	private Empleados desarrollador3;
	private Empleados tester1;
	private Empleados tester2;
	
	public Empresa (Empleados directivo, Empleados desarrollador1) {
		this.directivo = directivo;
		this.desarrollador1 = desarrollador1;
	}

	public Empleados getDirectivo() {
		return directivo;
	}
	public void setDirectivo(Empleados directivo) {
		this.directivo = directivo;
	}

	public Empleados getDesarrollador1() {
		return desarrollador1;
	}
	public void setDesarrollador1(Empleados desarrollador1) {
		this.desarrollador1 = desarrollador1;
	}

	public Empleados getDesarrollador2() {
		return desarrollador2;
	}
	public void setDesarrollador2(Empleados desarrollador2) {
		this.desarrollador2 = desarrollador2;
	}

	public Empleados getDesarrollador3() {
		return desarrollador3;
	}
	public void setDesarrollador3(Empleados desarrollador3) {
		this.desarrollador3 = desarrollador3;
	}

	public Empleados getTester1() {
		return tester1;
	}
	public void setTester1(Empleados tester1) {
		this.tester1 = tester1;
	}

	public Empleados getTester2() {
		return tester2;
	}
	public void setTester2(Empleados tester2) {
		this.tester2 = tester2;
	}
	
	public String getSueldo() {
		return "Los sueldos en la empresa son: \nDirectivo " + this.directivo.getSueldo() + " mas un bonus de " + this.directivo.getBonus();
	}
}
